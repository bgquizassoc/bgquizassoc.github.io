<body>

<h1>1234<br>Цифромания</h1>

<div id="start-screen">
  <p>Въведи име:</p>
  <input id="player-name" placeholder="Име">
  <br>
  <button id="start-btn">Започни</button>
</div>

<div id="quiz" style="display:none;">
  <div id="timer">20 сек.</div>
  <div id="question"></div>
  <div class="answers" id="answers"></div>
</div>

<script>
(async function(){

/* ---------- DOM ---------- */
const startScreen = document.getElementById('start-screen');
const quizDiv = document.getElementById('quiz');
const startBtn = document.getElementById('start-btn');
const playerInput = document.getElementById('player-name');
const timerDiv = document.getElementById('timer');
const qText = document.getElementById('question');
const answersDiv = document.getElementById('answers');

/* ---------- STATE ---------- */
let allQuestions = [];
let questions = [];
let idx = 0;
let timer;
let timeLeft = 20;

/* ---------- LOAD EXTERNAL JSON ---------- */
try {
  const res = await fetch('cifromania_questions.json');
  allQuestions = await res.json();
} catch (e) {
  qText.textContent = "Грешка при зареждане на questions.json";
  return;
}

/* ---------- PICK RANDOM 20 ---------- */
function pickRandom(count) {
  return [...allQuestions]
    .sort(() => Math.random() - 0.5)
    .slice(0, count);
}

/* ---------- TIMER ---------- */
function startTimer() {
  clearInterval(timer);
  timeLeft = 20;
  timerDiv.textContent = timeLeft + " сек.";

  timer = setInterval(() => {
    timeLeft--;
    timerDiv.textContent = timeLeft + " сек.";
    if (timeLeft <= 0) {
      clearInterval(timer);
      lockAnswers();
    }
  }, 1000);
}

function lockAnswers() {
  [...answersDiv.children].forEach(b => b.disabled = true);
}

/* ---------- RENDER ---------- */
function renderQuestion() {
  const q = questions[idx];
  qText.textContent = `${idx + 1}. ${q.question}`;
  answersDiv.innerHTML = "";

  const year = q.answer;
  const options = [
    year,
    year - q.tolerance[0],
    year + q.tolerance[1],
    year + q.tolerance[2]
  ].sort(() => Math.random() - 0.5);

  options.forEach(opt => {
    const b = document.createElement("button");
    b.textContent = opt;
    b.onclick = () => {
      lockAnswers();
      clearInterval(timer);
      if (opt === year) b.classList.add("correct");
      else b.classList.add("wrong");
    };
    answersDiv.appendChild(b);
  });

  startTimer();
}

/* ---------- START ---------- */
startBtn.onclick = () => {
  if (!playerInput.value.trim()) return;
  startScreen.style.display = "none";
  quizDiv.style.display = "block";
  questions = pickRandom(20);
  idx = 0;
  renderQuestion();
};

})();
</script>

</body>
</html>
